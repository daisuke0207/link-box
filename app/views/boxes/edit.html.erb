<%= render "shared/single-header"%>
<%= form_with model: @box, class: "up-box-form", local: true do |f| %>
  <%= f.label :name, "名前変更", class:"up-box-text" %>
  <%= f.text_field :name, placeholder: "リスト名入力（20字以内）", class: "up-box", maxlength:"20"; %>
  <%= f.hidden_field :position, value: 1%>
  <%= f.submit "更新", class: "up-box-submit" %>
<% end %>
<div class = "box-delete"><%= link_to "全てのリンク削除", destroy_all_box_connects_path(@box.id), method: :delete, class: "box-delete-in", data: { confirm: "グループ内のリンクを削除しますか？"} %></div>
<div class = "box-delete"><%= link_to "グループを削除", box_path, method: :delete, class: "box-delete-in", data: { confirm: "グループを削除しますか？"} %></div>